                  <h6 class="m-0 font-weight-bold text-primary">Update Program</h6>
                </div>
                <div class="card-body">
                  <form action="/admin/program/<%- program._id %>?_method=PUT" method="POST">
                    <label for="type">Program Type</label>
                    <select class="form-control form-control-md  mb-3" name="type" id="type">
                      <option disabled selected>Select Program Type</option>
                      <option value="Certificate">Certificate</option>
                      <option value="OD">OD</option>
                      <option value="HND">HND</option>
                      <option value="BSc.">BSc.</option>
                      <option value="MSc.">MSc</option>
                      <option value="PhD">PhD</option>
                    </select>

                    <div class="form-group">
                      <label for="exampleInputName1">Program Name</label>
                      <input type="text" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" value="<%- program.name %>" name="name">
                    </div>

                    <label for="duration">Program Duration</label>
                    <select class="form-control form-control-md  mb-3" name="duration" id="duration">
                      <option disabled selected>Select Program Duration</option>
                      <option value="1 Year">1 Year</option>
                      <option value="2 Years">2 Years</option>
                      <option value="3 Years">3 Years</option>
                      <option value="4 Years">4 Years</option>
                    </select>
                    <div class="form-group">
                      <label for="exampleInputFee">Program Fee (Le)</label>
                      <input type="number" class="form-control" id="exampleInputFee" aria-describedby="feeHelp" value="<%- program.fee %>" name="fee">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
