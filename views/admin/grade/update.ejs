<%- include('../partials/header') %>
        <!-- Container Fluid-->
        <div class="container-fluid" id="container-wrapper">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Courses</h1>
          </div>

          <!-- <div class="container-fluid">
            <ul>
              <% //courses.forEach((course) => { %> 
                <li><%- //course.name %></li>
              <% //}); %>
            </ul>
          </div> -->

          <div class="row">
            <div class="col-lg-12">
              <!-- Add Grade -->
              <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Update Grade</h6>
                </div>
                <div class="card-body">
                  <form action="/admin/grade/<%-grade._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                      <label for="exampleProgramName">Program Name</label>
                      <input type="text" class="form-control" id="exampleProgramName" aria-describedby="programNameHelp" value="<%- grade.program %>" name="program" readonly>
                    </div>
                    
                    <div class="form-group>
                      <label for="courseName">Course Name</label>
                      <input type="text" class="form-control" id="course" aria-describedby="courseHelp" value="<%- grade.course %>" name="course" readonly>
                    </div>
                    
                    <div class="form-group">
                      <label for="grade">Grade</label>
                      <select class="form-control form-control-md  mb-3" name="grade" id="grade">
                        <option disabled selected>Choose Grade</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                        <option value="E">E</option>
                        <option value="F">F</option>
                      </select>
                    </div>

                    <div class="form-group">
                      <label for="exampleAcademicYear">Academic Year</label>
                        <input type="text" class="form-control" id="exampleAcademicYear" aria-describedby="academicYearHelp" value="<%- grade.academicYear %>" name="academicYear">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputStudentID">Student ID</label>
                        <input type="number" class="form-control" id="exampleInputStudentID" aria-describedby="studentIDHelp" value="<%- grade.studentID %>" name="studentID" readonly>
                    </div>

                    <div class="form-group">
                      <label for="exampleSemester">Semester</label>
                        <input type="text" class="form-control" id="exampleInputStudentID" aria-describedby="studentIDHelp" value="<%- grade.semester %>" name="semester" readonly>
                    </div>

                    <div class="form-group">
                      <label for="exampleStudentYear">Student Year</label>
                        <input type="text" class="form-control" id="exampleStudentYear" aria-describedby="studentYearHelp" value="<%- grade.student_year %>" name="student_year" readonly>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!--Row-->
<%- include ('../partials/footer') %>
