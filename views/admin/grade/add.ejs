          <div class="row">
            <div class="col-lg-12">
              <!-- Add Grade -->
              <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Add Grade</h6>
                </div>
                <div class="card-body">
                  <form action="/admin/grade/add" method="POST">
                    <div class="form-group">
                      <label for="exampleProgramName">Program Name</label>
                      <input type="text" class="form-control" id="exampleProgramName" aria-describedby="programNameHelp" value="<%- program.type %> <%- program.name %>" name="program" readonly>
                    </div>
                    
                    <label for="courseName">Course Name</label>
                    <select class="form-control form-control-md  mb-3" name="course" id="courseName">
                      <option disabled selected>Select Course</option>
                      <% courses.forEach((course) => { %>
                        <% if(student.current_year === course.year && course.semester === semester){ %>
                          <option value="<%- course.name %>"><%- course.name %></option>
                        <% } %>
                      <% }); %>
                    </select>
                    
                    <label for="grade">Grade</label>
                    <select class="form-control form-control-md  mb-3" name="grade" id="grade">
                      <option disabled selected>Choose Grade</option>
                      <option value="A">A</option>
                      <option value="B">B</option>
                      <option value="C">C</option>
                      <option value="D">D</option>
                      <option value="E">E</option>
                      <option value="F">F</option>
                    </select>

                    <div class="form-group">
                      <label for="exampleAcademicYear">Academic Year</label>
                        <input type="text" class="form-control" id="exampleAcademicYear" aria-describedby="academicYearHelp" placeholder="e.g. 2020/2021" name="academicYear">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputStudentID">Student ID</label>
                        <input type="number" class="form-control" id="exampleInputStudentID" aria-describedby="studentIDHelp" value="<%- student.studentID %>" name="studentID" readonly>
                    </div>

                    <div class="form-group">
                      <label for="exampleSemester">Semester</label>
                        <input type="text" class="form-control" id="exampleInputStudentID" aria-describedby="studentIDHelp" value="<%- semester %>" name="semester" readonly>
                    </div>

                    <div class="form-group">
                      <label for="exampleStudentYear">Student Year</label>
                        <input type="text" class="form-control" id="exampleStudentYear" aria-describedby="studentYearHelp" value="<%- student.current_year %>" name="student_year" readonly>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
