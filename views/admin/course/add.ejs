<%- include('../partials/header') %>
        <!-- Container Fluid-->
        <div class="container-fluid" id="container-wrapper">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Add Course</h1>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <!-- Add Course -->
              <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Add Course</h6>
                </div>
                <div class="card-body">
                  <form action="/admin/course/add" method="POST">
                    <div class="form-group">
                      <label for="exampleInputName1">Course Name</label>
                      <input type="text" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" placeholder="Enter Course Name" name="name">
                    </div>
                    <div class="form-group">
                      <label for="exampleAbbr">Course Abbreviation</label>
                      <input type="text" class="form-control" id="exampleAbbr" aria-describedby="abbrHelp" placeholder="Enter Course Abbreviation" name="abbr">
                    </div>
                    <div class="form-group">
                      <label for="exampleCourseCode">Course Code</label>
                      <input type="text" class="form-control" id="exampleCourseCode" aria-describedby="courseCodeHelp" placeholder="Enter Course Code" name="courseCode">
                    </div>
                    <div class="form-group">
                      <label for="exampleCreditHour">Course Credit Hour</label>
                      <input type="number" class="form-control" id="exampleAbbr" aria-describedby="creditHourHelp" placeholder="Enter Course Credit Hour" name="creditHour">
                    </div>

                    <label for="year">Year</label>
                    <select class="form-control form-control-md  mb-3" name="year" id="year">
                      <option disabled selected>Select Year</option>
                      <option value="Year 1">Year 1</option>
                      <option value="Year 2">Year 2</option>
                      <option value="Year 3">Year 3</option>
                      <option value="Year 4">Year 4</option>
                    </select>

                    <label for="exampleCreditHour">Semester</label>
                    <select class="form-control form-control-md  mb-3" name="semester">
                      <option disabled selected>Select Semester</option>
                      <option value="First Semester">First Semester</option>
                      <option value="Second Semester">Second Semester</option>
                    </select>

                    <div class="form-group">
                      <label for="exampleLecturer">Lecturer</label>
                        <input type="text" class="form-control" id="exampleLecturer" aria-describedby="lecturer" placeholder="Enter Lecturer's Name" name="lecturer">
                    </div>

                    <select class="form-control form-control-md  mb-3" name="program">
                      <option disabled selected>Select Program</option>
                      <% programs.forEach((program) => { %>
                        <option value="<%- program.name %>">(<%- program.type %>) <%- program.name %></option>
                      <% }); %>
                    </select>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!--Row-->
<%- include ('../partials/footer') %>
