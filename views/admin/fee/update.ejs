<%- include('../partials/header') %>
        <!-- Container Fluid-->
        <div class="container-fluid" id="container-wrapper">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Update Fee</h1>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <!-- Add Program -->
              <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Update Fee</h6>
                </div>
                <div class="card-body">
                  <form action="/admin/fee/<%- fee._id %>?_method=PUT" method="POST">
                    <label for="exampleStudentProgram">Program</label>
                    <select class="form-control form-control-md  mb-3" name="program" id="exampleStudentProgram">
                      <% programs.forEach((program) => { %>
                        <% if (fee.program !== program.name) { %>
                          <option value="<%-program.name%>">(<%-program.type%>) <%- program.name %></option>
                        <% } else { %>
                          <option value="<%- fee.program %>" selected><%- program.type %> <%- fee.program %></option>
                        <% } %>
                      <% }); %>
                    </select>

                    <div class="form-group">
                      <label for="exampleInputFee">Program Fee (Le)</label>
                      <input type="number" class="form-control" id="exampleInputFee" aria-describedby="feeHelp" value="<%- fee.fee %>" name="fee">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputAcademicYear">Academic Year</label>
                      <input type="number" class="form-control" id="exampleInputAcademicYear" aria-describedby="academicYearHelp" value="<%- fee.academicYear %>" name="academicYear">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!--Row-->
<%- include ('../partials/footer') %>
