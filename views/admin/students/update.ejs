<%- include('../partials/header') %>
        <!-- Container Fluid-->
        <div class="container-fluid" id="container-wrapper">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Update Student</h1>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <!-- Add Student -->
              <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Update Student Information</h6>
                </div>
                <div class="card-body">
                  <form action="/admin/student/<%- student._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                      <label for="exampleStudenID">Student ID</label>
                      <input type="number" class="form-control" id="exampleStudentID" aria-describedby="studentIDHelp" value="<%- student.studentID %>" name="studentID">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputName1">Student Name</label>
                      <input type="text" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" value="<%- student.name %>" name="name">
                    </div>

                    <div class="form-group">
                      <label for="exampleEmail">Student Email</label>
                      <input type="email" class="form-control" id="exampleEmail" aria-describedby="emailHelp" value="<%- student.email %>" name="email">
                    </div>

                    <label for="exampleCurrentYear">Student Current Year</label>
                    <select class="form-control form-control-md  mb-3" name="current_year" id="exampleCurrentYear">
                      <option disabled selected>Select Student Current Year</option>
                      <option value="Year 1">Year 1</option>
                      <option value="Year 2">Year 2</option>
                      <option value="Year 3">Year 3</option>
                      <option value="Year 4">Year 4</option>
                    </select>

                    <label for="exampleStudentProgram">Student Program</label>
                    <select class="form-control form-control-md  mb-3" name="program" id="exampleStudentProgram">
                      <option disabled selected><%- student.program %></option>
                      <% programs.forEach((program) => { %>
                        <% if(student.program !== program.name ) { %>
                          <option value="<%-program.name%>">(<%-program.type%>) <%- program.name %></option>
                        <% } %>
                      <% }); %>
                    </select>

                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!--Row-->
<%- include ('../partials/footer') %>
